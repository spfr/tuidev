# EditorConfig - Consistent coding styles across editors
# https://editorconfig.org

root = true

# Default for all files
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Shell scripts
[*.sh]
indent_size = 4

# Python
[*.py]
indent_size = 4

# Makefiles need tabs
[Makefile]
indent_style = tab

# Markdown - preserve trailing whitespace for line breaks
[*.md]
trim_trailing_whitespace = false

# Lua (Neovim configs)
[*.lua]
indent_size = 2

# KDL (Zellij configs)
[*.kdl]
indent_size = 4

# TOML (Starship, Cargo)
[*.toml]
indent_size = 2

# JSON
[*.json]
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_size = 2
