// Development Layout - 3 vertical columns
// nvim (55%) | agent (25%) | runner (20%)
layout {
    tab name="Dev" focus=true {
        pane split_direction="vertical" {
            pane size="55%" {
                name "Editor"
                command "nvim"
                focus true
            }
            pane size="25%" {
                name "Agent"
            }
            pane size="20%" {
                name "Runner"
            }
        }
    }
    tab name="Terminal" {
        pane {
            name "Shell"
        }
    }
}
