// Remote Layout - Minimal for Tailscale/mosh sessions
layout {
    tab name="Dev" focus=true {
        pane split_direction="vertical" {
            pane size="65%" {
                name "Editor"
                command "nvim"
                focus true
            }
            pane size="35%" {
                name "Terminal"
            }
        }
    }
    tab name="Shell" {
        pane {
            name "Shell"
        }
    }
}
