{
  "$schema": "https://opencode.ai/config.json",
  "model": "anthropic/claude-sonnet-4-5",
  "small_model": "anthropic/claude-haiku-4-5",
  "theme": "opencode",
  "autoupdate": true,

  "tui": {
    "scroll_speed": 3,
    "diff_style": "auto"
  },

  "tools": {
    "write": true,
    "bash": true,
    "edit": true
  },

  "permission": {
    "edit": "ask",
    "bash": "ask"
  },

  "compaction": {
    "auto": true,
    "prune": true
  },

  "watcher": {
    "ignore": [
      "node_modules/**",
      "dist/**",
      "build/**",
      ".git/**",
      "*.log",
      "coverage/**",
      ".next/**",
      "__pycache__/**",
      "*.pyc",
      ".venv/**",
      "target/**"
    ]
  },

  "instructions": [
    "CLAUDE.md",
    "README.md"
  ]
}
